    </div>

    <div>
      <%= form.label :humano, style: "display: block" %>
      <%= form.number_field :humano %>
    </div>

    <div>
      <%= form.label :relacional, style: "display: block" %>
      <%= form.number_field :relacional %>
    </div>

    <div>
      <%= form.label :natural, style: "display: block" %>
      <%= form.number_field :natural %>
    </div>
   
    <div>
      <%= form.submit %>
    </div>
  <% end %>
<% end %>