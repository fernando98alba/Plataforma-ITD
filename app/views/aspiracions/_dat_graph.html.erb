
<div class="shadow p-3 mb-5 bg-white rounded">
  <div class="row">
    <%= turbo_frame_tag "dat_graph" do %>  
      <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-xs-12 ">
        <div>
          <canvas id="myChart"></canvas>
        </div>
        <script>
          label = [];
          values = [];
          maturity = [] ;
          recomendation = [];
          <% points_dat.keys.each do |dat|%>
            label.push("Capital <%= dat %>");
            values.push(<%= points_dat[dat]%>);
            maturity.push(<%= recomendation_mat["maturity_score"]%>);
            recomendation.push(<%= recomendation_dat[dat] -  points_dat[dat]%>);
          <%end%>
          console.log(label);
          console.log( values);
          console.log(label);
          ctx = document.getElementById('myChart');
          new Chart(ctx, {
            data: {
            labels: label,
            datasets: [{
              label: 'Puntaje por capital',
              type: 'bar',
              data: values,
              fill: true,
            },
            {
              label: 'Meta Madurez',
              type: 'line',
              data: maturity,
            },
            {
              label: 'Meta de Aumento',
              type: 'bar',
              data: recomendation,
            }]
            },
            options: {
              x: {
                stacked: true
              },
              y: {
                stacked: true,
                beginAtZero: true,
                reverse: true
              },
              elements: {
                line: {
                  borderWidth: 3

                }
              }
            },
          });             
        </script>
      </div>

      <div>
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
            <h3 class="text-center">El puntaje de madurez aspirado es <b><%= recomendation_mat["maturity_score"].to_i %></b></h3>
            <h3 class="text-center">El alineamiento con esa aspiraci√≥n de madurez es  <b><%= recomendation_mat["alignment_score"].to_i %></b></h3>
            <b> Los capitales bajo el umbral son:</b>
            <% @points_dat.keys().each do |dat|%>
            <div>
            <%if recomendation_dat[dat].to_i - @points_dat[dat].to_i > 0 %>
              <%= " - Te recomendamos subir el Capital #{dat} en #{recomendation_dat[dat].to_i - @points_dat[dat].to_i}" %>
            <% end %>
            </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
