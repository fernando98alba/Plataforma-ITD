<%= turbo_frame_tag "maturity_form" do %>
  <%= form_with(model: [empresa, aspiracion], url: update_maturity_recomendation_path(empresa), method: :post) do |form| %>
    <% if aspiracion.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(aspiracion.errors.count, "error") %> prohibited this tobe from being saved:</h2>

        <ul>
          <% aspiracion.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
