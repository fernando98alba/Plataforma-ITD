<%= form_with(model: empresa) do |f| %>
  <% if empresa.errors.any? %>
    <div style="color: red">
      <h4><%= pluralize(empresa.errors.count, "error") %>, necesitas llenar los siguientes campos: </h4>

      <ul>
        <% empresa.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group mb-2 ">
    <%= f.label "Nombre", class: "me-2"%><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control "%>
  </div>

  <div class="form-group mb-2 ">
    <%= f.label "Rut", class: "me-2" %><br />
    <%= f.text_field :rut, autofocus: true, class: "form-control "%>
  </div>

  <div class="form-group mb-2 ">
    <%= f.label "Sector", class: "me-2" %><br />
    <%= f.text_field :sector, autofocus: true, class: "form-control "%>
  </div>

  <div class="form-group mb-2 ">
    <%= f.label "NÃºmero de colaboradores", class: "me-2" %><br />
    <select name="empresa[size]" id="empresa_size" class="form-select">
      <%Empresa::OPTIONS.keys.each do |option|%>
        <option value=<%=option%>><%=Empresa::OPTIONS[option]%></option>
      <%end%>
    </select>
  </div>

  <div class="actions">
    <%= f.submit "Inscribir empresa", class: "btn btn-primary"%>
  </div>
<% end %>