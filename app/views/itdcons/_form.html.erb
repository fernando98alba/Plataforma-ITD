<%= form_with(model: [empresa, itdcon], id: "itdcon_form") do |form| %>
  <% if itdcon.errors.any? %>
    <div>
      <h2><%= pluralize(itdcon.errors.count, "error") %>, necesitas llenar los siguientes campos: </h2>

      <ul>
        <% itdcon.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class = "container">
    <div class="main mt-4">
      <%= form.check_box current_user.id, {checked: itdcon.itdinds.find_by(user_id: current_user.id) ? true : false} %>
      <%= form.label "#{current_user.name} (Tu)"%> <br />
      <%participants.each do |participant|%>
        <div>
          <%if participant != current_user%>
            <%= form.check_box participant.id, {checked: itdcon.itdinds.find_by(user_id: participant.id) ? true : false} %>
            <%= form.label participant.name%> <br />
          <%end%>
        </div>
      <%end%>
    </div>
  </div>
<% end %>

