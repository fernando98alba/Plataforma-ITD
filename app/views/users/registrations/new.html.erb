<div class="main mt-4 col-lg-4 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2 class="card-title text-center">Regístrate</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="form-group mb-2">
          <%= f.label :email, class: "mb-2" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "", class: "form-control " %>
        </div>
        <div class=" mb-2 ">
          <%= f.label "Nombre", class: "mb-2"%><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control "%>
        </div>

        <div class="form-group mb-2 ">
          <%= f.label "Apellido", class: "mb-2" %><br />
          <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class: "form-control "%>
        </div>

        <div class="form-group mb-2">
          <%= f.label :password, class: "mb-2" %>
          <% if @minimum_password_length %>
          <em>(Debe tener <%= @minimum_password_length %> caracteres mínimo, una mayúscula, una minúscula, un número y un caracter especial)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control " %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :password_confirmation, class: "mb-2" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control " %>
        </div>
        <%= render partial: "empresas/form", locals: {f: f}%>

        <div class="actions">
          <%= f.submit "Registrarse", data: {disable_with: "Procesando..."}, class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>