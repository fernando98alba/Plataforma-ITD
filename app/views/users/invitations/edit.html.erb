<div class="main mt-4 col-lg-4 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2><%= t "devise.invitations.edit.header" %></h2>
    </div>
    <div class="card-body">
      <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :invitation_token %>

        <div class=" mb-2 ">
          <%= f.label "Nombre", class: "mb-2"%><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control "%>
        </div>

        <div class="form-group mb-2 ">
          <%= f.label "Apellido", class: "mb-2" %><br />
          <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class: "form-control "%>
        </div>

        <div class="form-group mb-2">
          <%= f.label :password, class: "mb-2" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres m√≠nimo)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control " %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :password_confirmation, class: "mb-2" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control " %>
        </div>

        <div class="actions">
          <%= f.submit t("devise.invitations.edit.submit_button"), data: {turbo: false, disable_with: "Procesando..."}, class: "btn btn-primary"  %>
        </div>
      <% end %>
</div>
